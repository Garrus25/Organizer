<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="434.0" prefWidth="498.0" style="-fx-background-color: #d5dde8;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.organizerclients.Controller.AddTaskViewController">

    <VBox alignment="TOP_CENTER" prefHeight="363.0" prefWidth="458.0" style="-fx-background-color: #d5dde8;" StackPane.alignment="CENTER">
        <Label fx:id="titleView" text="ADD TASK">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
            <VBox.margin>
                <Insets top="40.0" />
            </VBox.margin></Label>
        <TextField fx:id="taskName" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="37.0" prefWidth="255.0" promptText="Task name">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></TextField>
      <Label fx:id="headerForChoiceBox" text="Choose task type">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="chooseTaskType" accessibleRole="CHECK_BOX" prefHeight="25.0" prefWidth="249.0" value="INFORMATIONAL"/>
      <TextArea fx:id="description" prefHeight="153.0" prefWidth="295.0" promptText="Description" wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
         </VBox.margin>
      </TextArea>
        <Button fx:id="buttonCreateTask" mnemonicParsing="false" text="Create task">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin></Button>
        <StackPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </StackPane.margin>
    </VBox>
</StackPane>
